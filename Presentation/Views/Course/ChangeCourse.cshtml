@model Course
@{
    ViewData["Title"] = "ChangeCourse";
}

<h1 class="text-center">Change course</h1>
<form asp-action = "ChangeCourse" method = "post" id="course">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input asp-for = "Name" type="text" class="form-control" value = "@Model.Name" id="InputName">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for = "Id" type="hidden" value = "@Model.Id">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Description</label>
        <textarea class="form-control" id="InputDescription" asp-for = "Description" rows = "5">@Model.Description</textarea>
    </div>
    <div class="row">
        <div>
            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure?')">Change</button>
            <a asp-action="AllCourses" type="button" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

